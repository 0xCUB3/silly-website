---
import AppLayout from '../../layouts/AppLayout.astro';

const appDetails = {
  appName: "About This Hack",
  appIcon: "/icons/about-this-hack.png",
  tagline: "Your Mac's Story, Beautifully Told.",
  version: "v2.0.2",
  downloadUrl: "https://github.com/2009-Nissan-Cube/About-This-Hack/releases/latest",
  sourceCodeUrl: "https://github.com/2009-Nissan-Cube/About-This-Hack",
  license: "MIT",
  compatibility: "macOS 10.12 Sierra and newer",
  showcaseImageUrl: "https://private-user-images.githubusercontent.com/94565160/344421824-26457de7-881b-4d4e-ab36-ee77a825da64.png?jwt=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..oJK9y4gqU7gYPDF_Z7cezYT5xjN0HXodbSZWuACWtqM", 
  displaysImageUrl: "/images/ath-displays.png",
  storageImageUrl: "/images/ath-storage.png",
  supportImageUrl: "/images/ath-support.png",
};
---

<AppLayout 
  appName={appDetails.appName} 
  appIcon={appDetails.appIcon} 
  logoSrc="/your-main-logo.svg"
  pageTitle={`${appDetails.appName} - ${appDetails.tagline}`}>

  <div class="app-landing-content">
    <section class="hero">
      <img src={appDetails.appIcon} alt={`${appDetails.appName} icon`} class="app-icon-main" />
      <h1>{appDetails.appName}</h1>
      <p class="tagline">{appDetails.tagline}</p>
      
      <div class="action-buttons">
        <a href={appDetails.downloadUrl} target="_blank" rel="noopener noreferrer" class="button primary-action">
          Download <span class="version">{appDetails.version}</span>
        </a>
        <!-- Can add source button here if desired using secondary style -->
        <!-- <a href={appDetails.sourceCodeUrl} target="_blank" rel="noopener noreferrer" class="button secondary-action">View Source</a> -->
      </div>
      <div class="sub-links">
         <!-- Can add changelog link here if available -->
      </div>
      
      <a href={appDetails.sourceCodeUrl} target="_blank" rel="noopener noreferrer" class="source-code-link">
        Source code <span class="license">Licensed under {appDetails.license}</span>
      </a>
      <p class="compatibility">Compatible with {appDetails.compatibility}</p>
    </section>

    <!-- Hero Showcase Image -->
    <section class="hero-showcase">
        <img src={appDetails.showcaseImageUrl} alt="About This Hack Overview Screenshot" /> 
    </section>

    <section class="features">  
      <div class="feature-text-group">
        <div class="feature-text-item">
          <h3>Remember this?</h3>
          <p>A throwback to the (better) About This Mac view from pre-Ventura. Get instant access to essential system specs, including your computer model, OS version, and processor details. Hackintosh users will appreciate the Clover or OpenCore bootloader version display.</p>
          </div>

        <div class="feature-text-item">
          <h3>More Features:</h3>
          <ul>
              <li>Visualize up to three of your connected displays with their respective resolutions</li>
              <li>Get a clear picture of your startup disk, including name, available space, and disk type, all presented with an easy-to-read usage bar</li>
              <li>Access a list of support resources for both Mac and Hackintosh users.</li>
          </ul>
        </div>
      </div>  
    </section>

  </div>

</AppLayout> 